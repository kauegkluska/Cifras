<div class="container">
    <form method="post" action="/cifra/{{resource.id}}?_method=put" class="mt-4 p-4 bg-white rounded shadow">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">

        <div class="mb-4">
            <label for="id-input-nome" class="form-label fw-bold">TÃ­tulo</label>
            <input type="text" name="nome" id="id-input-nome" value="{{resource.nome}}" class="form-control form-control-lg" required>
        </div>

        <div class="mb-4">
            <label for="id-input-descricao" class="form-label fw-bold">Cifra</label>
            <textarea name="descricao" id="id-input-descricao" class="form-control" rows="10" required>{{resource.descricao}}</textarea>
